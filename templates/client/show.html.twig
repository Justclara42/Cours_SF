{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!{% endblock %}

{% block body %}
    <div class="bg-gradient-to-r from-red-800 to-red-400 py-12 px-4">
        <div class="max-w-screen-xl mx-auto">
            <div class="max-w-3xl mx-auto mb-16 text-center">
                <h2 class="text-white text-3xl lg:text-4xl font-bold text-center mb-4 leading-relaxed">Tagada <i>Clients :  {{ client.companyName }}</i></h2>
            </div>
            <div class="">
                <a href="{{ path('app_client_edit' , { id: client.id }) }}" class="inline-block bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-md transition-colors duration-200 mb-6">Edit Client</a>
            </div>
            <div class="bg-red-300 p-6 sm:p-8 rounded-2xl border border-red-600 shadow-sm">
                <h1 class="text-red-900 text-center text-3xl font-semibold mb-6">{{ client.companyName }}</h1>
                    <ul class="space-y-4">
                            <li class="bg-white p-4 rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
                                <p class="text-gray-700">Person to contact : {{ client.contactName }}</p>
                                <p class="text-gray-700">Contact email : {{ client.email }}</p>
                                <p class="text-gray-500">Contact phone : {{ client.phone }}</p>
                            </li>
                    </ul>
            </div>
        </div>
    </div>
{% endblock %}
