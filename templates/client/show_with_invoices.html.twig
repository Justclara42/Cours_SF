{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!{% endblock %}

{% block body %}
    <div class="bg-gradient-to-r from-red-800 to-red-400 py-12 px-4">
        <div class="max-w-screen-xl mx-auto">
            <div class="max-w-3xl mx-auto mb-16 text-center">
                <h2 class="text-white text-3xl lg:text-4xl font-bold text-center mb-4 leading-relaxed">Tagada <i>Clients :  {{ client.companyName }}</i></h2>
            </div>
            <div class="">
                <a href="{{ path('app_client_edit' , { id: client.id }) }}" class="inline-block bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-md transition-colors duration-200 mb-6">Edit Client</a>
            </div>
            <div class="bg-red-300 p-6 sm:p-8 rounded-2xl border border-red-600 shadow-sm">
                <h1 class="text-red-900 text-center text-3xl font-semibold mb-6">{{ client.companyName }}</h1>
                <ul class="space-y-4">
                    <li class="bg-white p-4 rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
                        <p class="text-gray-700">Person to contact : {{ client.contactName }}</p>
                        <p class="text-gray-700">Contact email : {{ client.email }}</p>
                        <p class="text-gray-500">Contact phone : {{ client.phone }}</p>
                    </li>
                </ul>
            </div>
            {% if invoices is empty %}
                <div class="mt-8 text-center">
                    <p class="text-gray-700">No invoices found for this client.</p>
                </div>
            {% else %}
                <h2 class="text-red-900 text-2xl font-semibold mt-8 mb-4">Invoices</h2>
            <table class="min-w-full mt-8 bg-white border border-gray-200 rounded-lg shadow-md">
                <thead>
                    <tr class="bg-red-600 text-white">
                        <th class="px-6 py-3 text-left">Id</th>
                        <th class="px-6 py-3 text-left">Reference</th>
                        <th class="px-6 py-3 text-left">Date</th>
                        <th class="px-6 py-3 text-left">Status</th>
                        <th class="px-6 py-3 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for invoice in invoices %}
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4">{{ invoice.id }}</td>
                            <td class="px-6 py-4">{{ invoice.reference }}</td>
                            <td class="px-6 py-4">{{ invoice.issuedAt|date('Y-m-d') }}</td>
                            <td class="px-6 py-4">{{ invoice.status.name }}</td>
                            <td class="px-6 py-4">
{#                                <a href="{{ path('app_invoice_show', { id: invoice.id }) }}" class="text-blue-600 hover:text-blue-800">View</a>#}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center px-6 py-4">No invoices found for this client.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% endif %}

        </div>
    </div>
{% endblock %}
