{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!{% endblock %}

{% block body %}
    <div class="bg-gradient-to-r from-red-800 to-red-400 py-12 px-4">
        <div class="max-w-screen-xl mx-auto">
            <div class="max-w-3xl mx-auto mb-16 text-center">
                <h2 class="text-white text-3xl lg:text-4xl font-bold text-center mb-4 leading-relaxed">Tagada <i>Add Status</i></h2>
            </div>
            <div class="bg-red-300 p-6 sm:p-8 rounded-2xl border border-red-600 shadow-sm">
                <form method="post" action="{{ path('app_invoice_status_add') }}" class="space-y-6">
                    <div>
                        <label class="text-red-900 text-sm font-medium mb-2 block">Status Name</label>
                        <input name="name" type="text" required class="w-full text-slate-900 bg-[#e8f0fe] text-sm border border-slate-300 px-4 py-3 rounded-md outline-blue-600" placeholder="Enter status name" />
                    </div>
                    <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 rounded-md transition-colors duration-200">Create Status</button>

            </div>
        </div>
    </div>
{% endblock %}
